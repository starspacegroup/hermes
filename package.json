{
  "name": "hermes",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:pages": "node scripts/preview-build.js",
    "preview": "npm run db:setup:preview && vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "deploy": "npm run db:migrate && wrangler deploy",
    "db:migrate": "node scripts/db-migrate.js",
    "db:migrate:local": "node scripts/db-migrate.js --local",
    "db:migrate:preview": "node scripts/db-migrate.js --remote --preview",
    "db:seed": "node scripts/db-seed.js",
    "db:seed:local": "node scripts/db-seed.js --local",
    "db:seed:preview": "node scripts/db-seed.js --remote --preview",
    "db:setup": "node scripts/db-setup.js",
    "db:setup:local": "node scripts/db-setup.js --local",
    "db:setup:local:seed": "node scripts/db-setup.js --local --seed",
    "db:setup:preview": "node scripts/db-setup.js --remote --preview",
    "db:setup:preview:seed": "node scripts/db-setup.js --remote --preview --seed",
    "db:reset:local": "node scripts/db-reset.js --local --skip-reinit",
    "db:reset:preview": "node scripts/db-reset.js --remote --preview --skip-reinit"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@types/eslint": "^9.6.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.3",
    "vitest": "^2.0.0",
    "wrangler": "^4.45.0"
  },
  "type": "module"
}
